<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="colorPrimary">@color/brand_default</item>
        <item name="colorPrimaryDark">@color/brand_dark</item>
        <item name="colorAccent">@color/brand_light</item>
        <item name="android:windowBackground">@color/neutral_white</item>
        <item name="android:textAppearance">@style/BasicText</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
</resources>