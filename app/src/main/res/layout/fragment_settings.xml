            android:orientation="vertical"
            android:paddingStart="@dimen/spacing_20"
            android:paddingTop="@dimen/spacing_24"
            android:paddingEnd="@dimen/spacing_20"
            android:paddingBottom="@dimen/spacing_14"
            android:visibility="visible">

            <ImageView
                android:id="@+id/settingsBackupProfileIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_download"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/settingsBackupProfileTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_10"
                android:layout_marginEnd="@dimen/spacing_24"
                android:text="Backup Profile"
                android:textColor="@color/neutral_active"
                android:textSize="@dimen/text_14"
                app:layout_constraintStart_toEndOf="@id/settingsBackupProfileIcon"
                app:layout_constraintEnd_toStartOf="@id/settingsBackupProfileArrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/settingsBackupProfileDescription"
