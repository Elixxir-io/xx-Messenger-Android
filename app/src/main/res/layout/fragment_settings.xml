                android:layout_marginEnd="@dimen/spacing_24"
                android:text="@string/settings_notifications_title"
                android:textColor="@color/neutral_active"
                android:textSize="@dimen/text_14"
                app:layout_constraintBottom_toBottomOf="@id/settingsPushIcon"
                app:layout_constraintStart_toEndOf="@id/settingsPushIcon"
                app:layout_constraintTop_toTopOf="@id/settingsPushIcon"
