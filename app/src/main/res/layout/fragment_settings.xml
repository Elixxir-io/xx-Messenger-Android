                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/settingsEnterToSendTitle"
                style="@style/XxTextStyle.SemiBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_10"
                android:layout_marginEnd="@dimen/spacing_24"
                android:text="Press Enter to Send"
                android:textColor="@color/neutral_active"
                android:textSize="@dimen/text_14"
                app:layout_constraintBottom_toBottomOf="@id/settingsEnterToSendIcon"
                app:layout_constraintEnd_toStartOf="@id/settingsEnterToSendSwitch"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/settingsEnterToSendIcon"
                app:layout_constraintTop_toTopOf="@id/settingsEnterToSendIcon"
                app:lineHeight="@dimen/text_18" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/settingsEnterToSendSwitch"
