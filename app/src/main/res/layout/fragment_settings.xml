                android:layout_width="0dp"
                android:layout_height="@dimen/line_thin"
                android:layout_marginTop="@dimen/spacing_16"
                android:background="@color/lineGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/settingsDisclosuresLayout" />

            <LinearLayout
                android:id="@+id/settingsTermsOfUseLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_8"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/settingsLineEight">

                <TextView
                    android:id="@+id/settingsTermsOfUse"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
