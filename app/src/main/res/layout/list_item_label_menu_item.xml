<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="ui"
            type="io.xxlabs.messenger.support.toolbar.ToolbarMenuItem" />
    </data>

    <Button
        android:id="@+id/menuItemLabel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:onClick="@{() -> ui.onClick(ui)}"
        android:text="@{ui.label}"
        android:textColor="@{ui.textColor}"
        android:layout_margin="4dp"
        style="@style/registration_borderless_text_button"
        tools:layout_height="42dp"
        tools:text="Create"/>
</layout>